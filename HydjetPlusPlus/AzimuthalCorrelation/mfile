CC=g++

CFLAGS=-c -g -Wall `root-config --cflags`

LDFLAGS=`root-config --glibs`

all: macro_azimuthal_correlation

write_ROOT_file: macro_azimuthal_correlation.cc
	$(CC) $(CFLAGS) -o macro_azimuthal_correlation.o macro_azimuthal_correlation.cc
	$(CC) $(LDFLAGS) -o macro_azimuthal_correlation macro_azimuthal_correlation.o
